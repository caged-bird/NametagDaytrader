body
  background: #aaa;
  width 100%
  height 100%

  #wrapper
    display flex
    align-items center
    justify-content center
    background: #aaa;
    width 100%
    height 100%
    >.nametag-wrapper
        display flex
        align-items center
        justify-content center
        background: #aaa;
        width 100%
        height 100%
        >.nametag-loading
            display flex
            align-items center
            justify-content center
            width 100%
            height 100%
            background: #aaa;
            >.nametag-loading-img
                width 20px
                height 20px
        >.nametag-info
            background #bbb
            width 300px
            height 100px
            display flex
            align-items center
            justify-content center
            flex-direction row
            font-size white
            >.item-img
                width 100px
                height 100px
                >img
                    width 100%
                    height 100%
            >.item-info
                flex-direction column
                width 200px
                height 100px
                >.item-name
                    width 200px
                    height 50px
                    font-weight bold
                    font-size larger
                >.item-price
                    font-size medium
                    width 200px
                    height 50px

    >h1
      width 200px
      height 100px

